@model EncuestasITESRC.Areas.Administrador.Models.DAEncuestasViewModel
@inject  EncuestasITESRC.Services.MenuService ms
@{
    ViewData["Title"] = "AgregarEncuesta";
    Layout = "_LayoutAdmin";
}

<h2>Agregar Encuesta</h2>
<main>
    <div class="card mb-3" id="card-admin">
        <div class="card-header">
            <h3> <i class="fas fa-plus"></i> <span>Añadir Encuesta</span></h3>
        </div>
        <div class="card-body">
            <form method="post" action="~/Administrador/Encuestas/AgregarEncuesta">

                <input type="hidden" value="1" asp-for="IdAdministrador">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nombre</label>
                    <input asp-for="Titulo" name="Titulo" type="text" class="form-control" id="name" aria-describedby="name" />
                </div>
                <div class="form-group">
                    <label for="desc">Escriba una breve Descripcion</label>
                    <textarea asp-for="Descripcion" name="Descripcion" class="form-control" id="desc" rows="3"></textarea>
                    @*<select required asp-for="IdCategoria" class="input" type="text" name="IdCategoria" placeholder="Categoria">
                        @foreach (var item in ms.GetNombreCategoria())
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }
                    </select>*@
                    <select asp-for="IdCategoria" 
                            asp-items="@(new SelectList(ms.GetNombreCategoria(),"Id","Nombre"))">

                    </select>
                </div>
                @Html.ValidationSummary()
                <input type="submit" class="btn btn-primary" value="Agregar" />
                <a class="btn btn-primary" href="~/Administrador/Encuestas/Index">Cancelar</a>
            </form>              
            
            @if (ViewBag.Recuperacion == true)
            {
                <form method="post" action="~/Administrador/Encuestas/RecuperarEncuesta">
                    <p>Se ha encontrado una encuesta con el mismo nombre</p>
                    <p>¿Desea recuperarla?</p>
                    <input type="submit" value="Recuperar" />
                    <input name="id" id="id" type="hidden" value="@ViewBag.IdEncRec" />
                </form>
            }
        </div>
    </div>
</main>