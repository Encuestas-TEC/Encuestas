@model  EncuestasITESRC.Areas.Administrador.Models.DACarrerasViewModel
@{
    ViewData["Title"] = "EditarCarrera";
    Layout = "_LayoutAdmin";
}

    <div class="card mb-3" id="card-admin">
        <div class="card-header">

            <h3>  <i class="fas fa-edit"></i> <span>Editar Carrera</span></h3>

        </div>
        <div class="card-body">
            <form method="post" action="~/Administrador/Carreras/EditarCarrera">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="exampleInputEmail1">Nombre</label>
                    <input asp-for="Nombre" name="Nombre" type="text" class="form-control" id="name" aria-describedby="name">
                    <small id="name" class="form-text text-muted">use solo letras </small>
                </div>
                <div class="form-group">
                    <label for="desc">Escriba una breve Descripcion</label>
                    <textarea asp-for="Descripcion" name="Descripcion" class="form-control" id="desc" rows="3"></textarea>
                </div>

                @Html.ValidationSummary()

                <button type="submit" class="btn btn-primary">Aceptar</button>
                <a class="btn btn-primary" href="~/Administrador/Carreras/Index">Cancelar</a>
            </form>
        </div>
    </div>

