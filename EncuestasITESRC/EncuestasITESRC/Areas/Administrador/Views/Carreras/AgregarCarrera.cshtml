@model EncuestasITESRC.Areas.Administrador.Models.DACarrerasViewModel
@{
    ViewData["Title"] = "AgregarCarrera";
    Layout = "_LayoutAdmin";
}

<div class="card mb-3" id="card-admin">
    <div class="card-header">

        <h3> <i class="fas fa-plus"></i> <span>Añadir Carrera</span></h3>

    </div>
    <div class="card-body">
        <form method="post" action="~/Administrador/Carreras/AgregarCarrera" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input asp-for="Nombre" name="Nombre" type="text" class="form-control" id="name" aria-describedby="name">
                <small id="name" class="form-text text-muted">use solo letras </small>
            </div>
            <div class="form-group">
                <label for="desc">Escriba la clave de la carrera</label>
                <input asp-for="Clave" name="Clave" class="form-control" id="desc" rows="3">
            </div>

            @Html.ValidationSummary()

            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a class="btn btn-primary" href="~/Administrador/Carreras">Cancelar</a>
        </form>
        @if (ViewBag.Recuperacion == true)
        {
            <form method="post" action="~/Administrador/Carreras/RecuperarCarrera">
                <p>Se ha encontrado una carrera con el mismo nombre</p>
                <p>¿Desea recuperarla?</p>
                <input class="btn btn-primary" type="submit" value="Recuperar"/>
                <input name="id" id="id" type="hidden" value="@ViewBag.IdEncRec" />
            </form>
        }

    </div>
</div>

